{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive scatter plot of elevation vs rainfall in Australia.",
  "width": 600,
  "height": 400,
  "title": "Elevation vs Rainfall across Australia",
  "data": {"url": "https://raw.githubusercontent.com/ShiChen66/FIT3179_Week9/refs/heads/main/Homework-w9/data/rainfall.csv"},
  "params": [{
    "name": "rainfallFilter",
    "value": 0,
    "bind": {"input": "range", "min": 0, "max": 30, "step": 1, "name": "Min rainfall (mm): "}
  }],
  "transform": [{"filter": "datum.rainfall >= rainfallFilter"}, {"filter": "datum.elevation >= 0"}],
  "layer": [
    {
      "mark": {"type": "point", "filled": true, "opacity": 0.6},
      "encoding": {
        "x": {"field": "elevation", "type": "quantitative", "title": "Elevation (m)"},
        "y": {"field": "rainfall", "type": "quantitative", "title": "Rainfall (mm)"},
        "color": {"field": "region", "type": "nominal", "legend": {"title": "Region"}},
        "tooltip": [
          {"field": "station_name", "title": "Station"},
          {"field": "rainfall", "type": "quantitative", "title": "Rainfall (mm)", "format": ".0f"},
          {"field": "elevation", "type": "quantitative", "title": "Elevation (m)", "format": ".0f"}
        ]
      }
    }
  ]
}
