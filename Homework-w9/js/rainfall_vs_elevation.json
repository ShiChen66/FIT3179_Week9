{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive scatter plot of elevation vs rainfall in Australia.",
  "width": 600,
  "height": 400,
  "title": "Elevation vs Rainfall across Australia",
  "data": {"url": "https://raw.githubusercontent.com/ShiChen66/FIT3179_Week9/refs/heads/main/Homework-w9/data/map.topojson"},
  "params": [{
    "name": "rainfallFilter",
    "value": 0,
    "bind": {"input": "range", "min": 0, "max": 3000, "step": 100, "name": "Min rainfall (mm): "}
  }],
  "transform": [{"filter": "datum.rainfall >= rainfallFilter"}],
  "layer": [
    {
      "mark": {"type": "point", "filled": true, "opacity": 0.6},
      "encoding": {
        "x": {"field": "elevation", "type": "quantitative", "title": "Elevation (m)"},
        "y": {"field": "rainfall", "type": "quantitative", "title": "Rainfall (mm)"},
        "color": {"field": "region", "type": "nominal", "legend": {"title": "Region"}},
        "tooltip": [
          {"field": "station_name", "title": "Station"},
          {"field": "rainfall", "type": "quantitative", "title": "Rainfall (mm)", "format": ".0f"},
          {"field": "elevation", "type": "quantitative", "title": "Elevation (m)", "format": ".0f"}
        ]
      }
    },
    {
      "transform": [
        {"window": [{"op": "rank", "as": "rank"}], "sort": [{"field": "rainfall", "order": "descending"}]},
        {"filter": "datum.rank == 1"}
      ],
      "mark": {"type": "text", "dy": -10, "align": "center", "fontWeight": "bold", "color": "darkred"},
      "encoding": {"x": {"field": "elevation"}, "y": {"field": "rainfall"}, "text": {"value": "Highest Rainfall"}}
    }
  ]
}
